{
    "name": "drupol/backdrop-conventions",
    "description": "Backdrop conventions for coding.",
    "keywords": ["backdrop", "coding style", "phpcs", "coding standard", "php-cs-fixer"],
    "license": "MIT",
    "type": "library",
    "require": {
        "php": ">= 5.6",
        "backdrop/coder": "^1",
        "friendsofphp/php-cs-fixer": "^2.15",
        "jakub-onderka/php-parallel-lint": "~1",
        "phpro/grumphp": "~0.12.1 || ~0.15",
        "symfony/yaml": "^3.4 || ^4.2"
    },
    "suggest": {
        "symplify/coding-standard": "The LineLength fixer needs this library. Only PHP >= 7."
    },
    "autoload": {
        "psr-4": {
            "drupol\\BackdropConventions\\": "./src/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
